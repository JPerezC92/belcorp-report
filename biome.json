{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"packages/**/*",
			"src/**/*",
			".vscode/**/*",
			"index.html",
			"vite.config.ts",
			"*.ts",
			"*.tsx",
			"*.js",
			"*.jsx",
			"!src/routeTree.gen.ts"
		]
	},
	"formatter": {
		"indentWidth": 4,
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
